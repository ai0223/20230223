	<script type="text/javascript">
		function hide() {
			document.querySelector(".news_title").style.display="none";
		}

		function show() {
			document.querySelector(".news_title").style.display="block";
		}

		function hidestray kids() {
			document.querySelector(".stray kids").style.display="none";
		}

		function showstray kids() {
			document.querySelector(".stray kids").style.display="block";
